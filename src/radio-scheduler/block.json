{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "terrificobjects/radio-scheduler",
    "version": "0.1.0",
    "title": "Radio Scheduler",
    "category": "widgets",
    "icon": "calendar",
    "description": "Set up radio station scheduling using a simple calendar.",
    "supports": {
        "html": false,
        "align": true,
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "center"
        },
        "backgroundColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "textColor": {
            "type": "string",
            "default": "#000000"
        },
        "padding": {
            "type": "number",
            "default": 20
        },
        "margin": {
            "type": "number",
            "default": 0
        },
        "fontSize": {
            "type": "number",
            "default": 16
        },
        "width": {
            "type": "string",
            "default": "800px"
        },
        "buttonSwalColor": {
            "type": "string",
            "default": "#3085d6"
        },
        "eventColor": {
            "type": "string",
            "default": "#007bff"
        }
    },
    "textdomain": "radio-scheduler",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./frontend.js"
}
